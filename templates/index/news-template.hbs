     <h1 class="text-black-10">News</h1>
        <div class="row py-3">
            {{#each data}}
            <div class="col">
                <div class="float-start me-3">
                    <div class="date text-white text-center rounded-4 py-1">
                        <h3>{{date}}</h3>
                    </div>
                   <a class="readmore btn btn-link pt-0"
                    href="#"
                    onclick="loadData('news/{{id}}','details-template','content'); return false;">
                    Read more
                    </a>
                </div>
                <div>
                    <h3>{{name}}</h3>
                    <p class="text-black-50">{{summary}}</p>
                </div>
            </div>
            {{/each}}
        </div>